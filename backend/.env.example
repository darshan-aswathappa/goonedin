# --- PROJECT SETTINGS ---
PROJECT_NAME="Velocity Job Monitor"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# --- TARGETS ---
# What are we hunting for?
TARGET_KEYWORDS=["Software Engineer","Software Developer","Backend","Full Stack","FullStack","Java", "Python", "New Grad"]
TARGET_LOCATIONS=["United States"]

# --- BLOCKED COMPANIES ---
# Jobs from these companies will be filtered out (no notifications sent).
BLOCKED_COMPANIES=["Company1","Company2"]

# --- PROXY (Optional but Recommended for Speed) ---
# If you have a rotating proxy service, put it here.
# Format: http://user:pass@host:port
PROXY_URL=""

# --- NOTIFICATIONS (TELEGRAM) ---
# 1. Message @BotFather on Telegram to create a bot and get the token.
# 2. Message @userinfobot to get your numeric Chat ID.
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"
TELEGRAM_CHAT_ID="your_chat_id_here"

# --- DATABASE (REDIS) ---
# If you run Redis locally, this is the default.
REDIS_URL="redis://localhost:6379/0"

# --- JOBRIGHT.AI CREDENTIALS ---
# Your jobright.ai login credentials for automated authentication
JOBRIGHT_EMAIL=""
JOBRIGHT_PASSWORD=""
# Or provide SESSION_ID cookie directly (copied from browser DevTools - takes priority over email/password)
JOBRIGHT_COOKIES=""
